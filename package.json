{
  "name": "DIBB",
  "version": "3.0.0",
  "author": "Torchbox Ltd",
  "repository": {
    "type": "git",
    "url": "https://github.com/torchbox/design-in-browser-bootstrap/"
  },
  "sasslintConfig": ".sass-lint.yml",
  "config": {
    "src_html": "site/patterns",
    "src_js": "site/javascript",
    "src_css": "site/sass",
    "src_img": "site/images",
    "dest_html": "patternlab/source/_patterns",
    "dest_js": "dist/js",
    "dest_css": "dist/css",
    "dest_img": "dist/images",
    "dist": "dist"
  },
  "scripts": {
    "//[ Utility ]//": "",
    "upload": "dploy",
    "serve": "browser-sync start --config browsersync.config.js",
    "reload": "browser-sync reload",
    "reload:css": "npm run reload -- --files='*.css'",
    "clean:lab": "rm -rf $npm_package_config_dest_html/{*.html,js/**,css/**,img/**}",
    "clean:dist": "rm -rf $npm_package_config_dist/{js/**,css/**,images/**,patternlab/{annotations,css,fonts,js,patternlab-components,patterns}}",
    "clean": "npm-run-all -p clean:*",
    "git:init": "rm -rf .git && git init && git add . && git commit -m 'Project start'"
    ,
    "//[ SASS ]//": "",
    "compile:css": "node-sass -o $npm_package_config_dest_css $npm_package_config_src_css",
    "compile:css:dev": "npm run compile:css -- --output-style expanded --source-map true",
    "compile:css:prod": "npm run compile:css -- --output-style compressed",
    "postscompile:css:prod": "npm run autoprefixer",
    "autoprefixer": "postcss -u autoprefixer -r $npm_package_config_dest_css/*.css"
    ,
    "//[ Javascript ]//": "",
    "compile:js": "rollup -c",
    "compile:js:dev": "npm run compile:js -- --environment entry:main.js --sourcemap",
    "compile:js:prod": "npm run compile:js -- --environment entry:main.js,production"
    ,
    "//[ Linting ]//": "",
    "lint:css": "sass-lint $npm_package_config_src_css'/**/**' -v -q || true",
    "lint:js": "eslint $npm_package_config_src_js --ignore-pattern **/vendor/**/*.js || true",
    "lint": "npm-run-all -p lint:js lint:css"
    ,
    "//[ Watches ]//": "",
    "watch:html": "onchange $npm_package_config_src_html'/**/**' -- npm run sync:html && npm run reload",
    "watch:img": "onchange $npm_package_config_src_img'/**/**' -- npm run sync:img && npm run reload",
    "watch:js": "onchange $npm_package_config_src_js'/**/**' -- npm-run-all -p compile:js:dev lint:js && npm run reload",
    "watch:css": "onchange $npm_package_config_src_css -- npm-run-all -p compile:css:dev lint:css && npm run reload:css",
    "watch": "npm-run-all -p watch:*"
    ,
    "//[ Patternlab Syncs ]//": "",
    "sync:html": "rsync -rtvu --delete $npm_package_config_src_html/ $npm_package_config_dest_html/",
    "postsync:html": "npm run lab:build",
    "sync:img": "rsync -rtvu --delete $npm_package_config_src_img/ $npm_package_config_dest_img/",
    "sync": "npm-run-all -p sync:*"
    ,
    "//[ Patternlab ]//": "",
    "lab:build": "cd patternlab && php core/console --generate",
    "lab:watch": "cd patternlab && php core/console --watch"
    ,
    "//[ Tasks ]//": "",
    "build": "npm-run-all clean sync compile:*:dev lab:build",
    "build:prod": "npm-run-all clean sync compile:*:prod lab:build",
    "playground": "npm-run-all clean build:prod upload",
    "lab": "npm-run-all -p sync serve lab:watch watch compile:*:dev",
    "dev": "npm run lab"
    ,
    "postinstall": "npm run build"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-eslint": "^7.1.1",
    "babel-plugin-external-helpers": "^6.8.0",
    "babel-preset-es2015": "^6.13.2",
    "browser-sync": "^2.13.0",
    "dploy": "^1.2.0",
    "eslint": "^3.2.2",
    "left-pad": "^1.1.3",
    "node-sass": "^4.1.1",
    "npm-run-all": "^3.1.2",
    "onchange": "^3.2.0",
    "postcss-cli": "^2.5.2",
    "rollup": "^0.38.0",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^6.0.1",
    "rollup-plugin-eslint": "^3.0.0",
    "rollup-plugin-filesize": "^1.0.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-sizes": "^0.2.3",
    "rollup-plugin-uglify": "^1.0.1",
    "sass-lint": "^1.8.2"
  },
  "engines": {
    "node": ">=4"
  }
}
