

<div class="card {{ variant }}">
	<a class="content" href="{{ href }}">
		<div class="card__image">
			<div class="content">
				{% include "atoms-image__cover" %}
			</div>
		</div>
		<div class="card__text">
			<div class="content">
				{% include "atoms-text__detail" with { content : category, modifier : 'text__detail--mobile' } %}
				{% include "atoms-text__subheading" with { content : title } %}
				<span class="card__detail">
					<div class="content">
						{% include "atoms-text__detail" with { content : author, modifier : 'text__detail--highlight' } %}
						{% include "atoms-text__detail" with { content : date } %}
					</div>
				</span>
			</div>
		</div>
	</a>
</div>
